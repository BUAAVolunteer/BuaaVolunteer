.bg {
  height: 100vh;
  left: 0;
  opacity: 0.2;
  position: fixed;
  top: 0;
  width: 100vw;
  z-index: -1;
}

.bg-img {
  height: 111%;
  width: 100%;
}

.header {
  display: flex;
  justify-content: center;
}

.header-img {
  width: 270rpx;
  height: 150rpx;
  margin-top: -20rpx;
}

.main {
  height: 80vh;
  margin-top: -30rpx;
  width: 100vw;
  z-index: 0;
}

.footer {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
}

.footer-btn {
  align-items: center;
  background-color: var(--cyan);
  color: white;
  display: flex;
  font-size: 30rpx;
  font-weight: bold;
  justify-content: center;
  padding: 20rpx 0;
  width: 90vw;
}
