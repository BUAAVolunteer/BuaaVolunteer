    bottom: 155rpx;
}

.button2 {
    bottom: 215rpx;
}

.button3 {
    bottom:275rpx;
}

.button4 {
    bottom:335rpx;
}

.button5 {
    bottom:395rpx;
}

.add-img {
    width: 100rpx;
    height: 100rpx;
    position: fixed;
    bottom:50rpx;
    left: 130rpx;
    z-index: 5;
    border-radius: 50%;
    border: 2px solid #fff;
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.submit-img {
    width: 85rpx;
    height: 85rpx;
    position: fixed;
    bottom:49rpx;
    left: 235px;
    z-index: 5;
    border-radius: 50%;
    border: 2px solid #fff;
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
    padding: 7rpx;
}

.reports-header {
    display: flex;
    padding: 20rpx 0rpx;
    align-items: center;
    justify-content: center;
    font-size: 34rpx;
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    letter-spacing: 2rpx;
}

.form-center {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 100rpx;
}


.edit-form-box {
    display: flex;
    margin-bottom: 30rpx;
    margin-left: 18rpx;
}

.form-upload {
    height: 50rpx;
    opacity: 0;
}


.form-inner {
    display: block;
}

.input-all-width {
    min-width: 90%;
}

.input-l-width {
    width: 260rpx;
    margin-right: 10rpx;
}

.force_text {
    color: rgba(219, 44, 31, 1);
    padding-left: 10rpx;
}

.picker {
    font-size: 24rpx;
    width: 450rpx;
    height: 30rpx;
}


/*右侧展示层  */

.page-top {
    position: relative;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 1300rpx;
    background-color: white;
    transition: All 0.4s ease;
    -webkit-transition: All 0.4s ease;
    -moz-transition: All 0.4s ease;
    -o-transition: All 0.4s ease;
}

.page-state {
    transform: rotate(0deg) scale(1) translate(60%, 0%);
    -webkit-transform: rotate(0deg) scale(1) translate(60%, 0%);
    -ms-transform: rotate(0deg) scale(1) translate(60%, 0%);
    -moz-transform: rotate(0deg) scale(1) translate(60%, 0%);
    -o-transform: rotate(0deg) scale(1) translate(60%, 0%);
}

.imgw {
    width: 100%;
}


/*右侧遮罩层  */

.page-mask {
    position: fixed;
    width: 100%;
    height: 2000rpx;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.5);
}

.page-mask-show {
    display: none;
}

.page-state-hide {
    display: none;
}

.open {
    width: 60%;
    background-color: var(--greyLight);
    position: fixed;
}


/*选项*/

.value {
    width: 70%;
}

.limit {
    width: 10%;
}

.duration {
    width: 10%;
}