/* pages/forms/forms.wxss */

page {
  background-color: white;
  height: 80%;
}

/* 底层按钮父属性 */
.footer {
  position: fixed;
  width: 100vw;
  display: flex;
  justify-content: space-around;
  transition: transform 0.3s ease;
}

/* 第一层按钮定位 */
.button-common {
  bottom: 0;
}

/* 第二层按钮定位 */
.button-hide {
  bottom: -200rpx;
}

/* 第一层按钮下移 */
.button-common-hide {
  transform: translateY(200rpx);
}

/* 第二层按钮上移 */
.button-common-show {
  transform: translateY(-200rpx);
}

/* 随第二层组件上移而显现的全局遮盖层 */
.mask-bottom-show {
  width: 100vw;
  height: 1250rpx;
  position: fixed;
  top: 0;
}

/* 上层组件全局高度 */
.reports-container {
  height: 100vh;
}

.addlist {
  z-index: 2;
}

.but-each {
  padding: 0;
}

/* 添加的5个按钮 */

/* 公共样式 */
.but-font {
  left: 100rpx;
  height: 50rpx;
  width: 170rpx;
  position: fixed;
  font-size: 20rpx;
  font-weight: bold;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
  border-radius: 0.04%;
  background-color: white;
}

/* 各自定位 */
.button1 {
  bottom: 155rpx;
}

.button2 {
  bottom: 215rpx;
}

.button3 {
  bottom: 275rpx;
}

.button4 {
  bottom: 335rpx;
}

.button5 {
  bottom: 395rpx;
}

.reports-header {
  display: flex;
  padding: 20rpx 0rpx;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  letter-spacing: 2rpx;
}

/*右侧展示层  */

.page-top {
  position: relative;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100vh;
  background-color: white;
  transition: transform 0.5s ease;
}

.page-state {
  transform: rotate(0deg) scale(1) translate(60%, 0%);
}

.page-state-hide {
  display: none;
}

.imgw {
  width: 100%;
}

/*右侧遮罩层  */
.open {
  width: 60%;
  background-color: var(--greyLight);
  z-index: 5;
  position: absolute;
}

/*选项*/

.value {
  width: 70%;
}

.limit {
  width: 10%;
}

.duration {
  width: 10%;
}
