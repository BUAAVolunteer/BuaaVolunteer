/* pages/Profile/ProfilePic/ProfilePic.wxss */
.profile-pic {
  background-color: #fff;
  width: 100vw;
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
}

.crossclick {
  display: flex;
  height: 100%;
  width: 100%;
}

.cross {
  height: 30rpx;
  width: 30rpx;
}

.head {
  align-items: center;
  display: flex;
  justify-content: space-between;
  padding: 0 60rpx;
}

.title {
  color: #5a5d5d;
  font-size: 30rpx;
  margin: 30rpx 0;
}

.main {
  background-color: white;
  border-top: solid 1px #ebebeb;
  display: flex;
  flex-wrap: wrap;
  height: 700rpx;
  margin: 0 30rpx;
  overflow: auto;
  padding-bottom: 60rpx;
}

.wrapper {
  align-items: center;
  border-radius: 50%;
  border: 1px solid #f0f0f0;
  box-shadow: 0 0 12px 6px rgba(84, 162, 254, 0.05);
  display: flex;
  height: 160rpx;
  margin: 60rpx 30rpx 0;
  padding: 10rpx;
  position: relative;
  width: 160rpx;
}

.current {
  border: 1px solid var(--blueLight);
}

.pic {
  box-sizing: border-box;
  border-radius: 50%;
  height: 100%;
  width: 100%;
}

.lock {
  box-sizing: border-box;
  background-color: rgba(255, 255, 255, 0.8);
  height: 140rpx;
  border-radius: 50%;
  left: 9rpx;
  position: absolute;
  top: 12rpx;
  width: 140rpx;
  padding: 20rpx;
}

.lock__inner {
  width: 100%;
  height: 100%;
}
