}

.bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 100%;
    background-size: cover;
    z-index: -1;
}

image {
    max-width: 100%;
    display: inline-block;
    position: relative;
    z-index: 0;
    width: 750rpx;
}

.padding-xl {
    padding-top: 20rpx;
    padding-left: 50rpx;
    padding-right: 50rpx;
    padding-bottom: 15rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.title {
    display: flex;
    margin: 20rpx;
    color: var(--black);
    justify-content: center;
    font-weight: bold;
    font-size: 25rpx;
}