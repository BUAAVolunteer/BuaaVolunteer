}

.title-img {
    width: 300rpx;
    height: 50rpx;
    margin-top: 50rpx;
    opacity: 0.8;
    border-radius: 10rpx;
}

.item {
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    margin-left: 50rpx;
    margin-right: 50rpx;
    border-color: white;
    border-width: bold;
