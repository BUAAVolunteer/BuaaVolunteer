/* pages/Practice/Practice.wxss */
page {
  animation: in 1s ease-in forwards;
}

.middle {
  z-index: 3;
  position: relative;
  margin-top: 25rpx;
}

@keyframes in {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

.middle--div {
  background-color: #d9d9da;
  height: 2rpx;
  margin: 30rpx 0 30rpx 115rpx;
  width: 635rpx;
}

.middle--map {
  height: 150rpx;
  margin: 50rpx 25rpx 50rpx;
  width: 700rpx;
}

.footer__left {
