  position: relative;
}

.gugugu image {
  height: 311rpx;
  width: 252rpx;
  
  opacity: 0.6;
}

.noRegister {
  width: 100%;
  height: 100%;
  margin: 50rpx 25rpx 50rpx;
  position: relative;
}

.goRegister {
  height: 200rpx;
  width: 700rpx;
}

.profile-pic {
  display: none;
  bottom: -550px;
  position: fixed;
  transition: transform 0.7s ease;
  z-index: 10;
  animation: hide 0.1s ease forwards;
}

@keyframes hide {
  0% {
    display: none;
  }
}

.profile-pic--active {
  display: block;
  transform: translateY(-550px);
  /* bottom: 0px; */
}

.shadow {
  background-color: rgba(0, 0, 0, 0.5);
  height: 100vh;
  left: 0;
  opacity: 0.3;
  position: fixed;
  top: 0;
  width: 100vw;
  z-index: 9;
}

.rotate {
  transform: rotateY(360deg);
  transition: transform 0.7s ease;
}