page {
    background-color: var(--greyLight);
}

.flex {
    display: flex;
}

.title {
    display: flex;
    justify-content: center;
    font-size: 40rpx;
    font-family: 微软雅黑;
    background-color: var(--blueLight);
    margin-bottom: 20rpx;
}

.items-img {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
    margin-top: 6rpx;
}

.items-box {
    background-color: white;
    border: 1rpx solid var(--greyLight);
    width: 100%;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
}

.items-title {
    display: flex;
    justify-content: center;
    font-weight: bold;
    font-size: 35rpx;
    margin-bottom: 10rpx;
    margin-top: 10rpx;
    font-family: 仿宋;
    width: 100%;
}

.items-button {
    justify-content: space-around;
    display: flex;
    margin-top: 20rpx;
}

.items {
    display: flex;
}

.bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    z-index: -1;
}

image {
    max-width: 100%;
    display: inline-block;
    position: relative;
    z-index: 0;
    width: 750rpx;
}

.add-img {
    width: 100rpx;
    height: 100rpx;
    position: fixed;
    bottom: 30rpx;
    left: 130rpx;
    z-index: 5;
    border-radius: 50%;
    border: 2px solid #fff;
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.add-but {
    position: fixed;
    bottom: -25rpx;
    width: 700rpx;
    z-index: 5;
}

.scroll-view {
    position: fixed;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 80%;
    background-color: white;
    z-index: 0;
    transition: All 0.4s ease;
    -webkit-transition: All 0.4s ease;
    margin-top: 100rpx;
}

.title-img {
    width: 270rpx;
    height: 150rpx;
    margin-top: -20rpx;
}

.items-titleimg {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    left: 20rpx;
    margin-top: 9rpx;
}

.items-titleimg2 {
    width: 100rpx;
    height: 45rpx;
    position: absolute;
    right: 20rpx;
    margin-top: 5rpx;
    border-radius: 5%;
    background-color: var(--green);
    z-index: 12;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
}