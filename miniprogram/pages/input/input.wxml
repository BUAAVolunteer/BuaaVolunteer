<form bindsubmit="order_submit" report-submit="true">
  <view class="cu-form-group margin-top">
		<view class="title">项目名称</view>
		<picker name="title" bindchange="PickerChange" value="{{index}}" range="{{picker}}">
			<view class="picker">
				{{index?picker[index]:'请在这里选择要发布的志愿项目'}}
			</view>
		</picker>
	</view>
	
  	<view class="cu-form-group">
		<view class="title">招募日期</view>
		<picker name="bd" mode="date" value="{{date}}" bindchange="DateChange">
			<view class="picker">
				{{date1}}
			</view>
		</picker>
	</view>

    <view class="cu-form-group">
		<view class="title">发布时间</view>
		<picker name="time" mode="time" value="{{time1}}" start="00:00" end="24:00" bindchange="TimeChange">
			<view class="picker">
				{{time1}}
			</view>
		</picker>
	</view>
	<view class="cu-form-group align-start">
		<view class="title">开展日期</view>
		<textarea name="textarea" maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaBInput" placeholder="请输入志愿活动时间，如：11月9日至11月10日"></textarea>
	</view>
	<view class="padding-xl">
    <button class="cu-btn block line-blue lg" form-type="submit">发布志愿信息</button>
  </view>
</form>