<!-- 以下选项 -->
<view class="swiper-tab">
  <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">
    北校区
  </view>
  <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">
    南校区
  </view>
</view>
<!-- 这里是遍历icon的信息 -->
<!-- 用swiper来切换,这里的currentTab就是js里修改的-->
<swiper class="wrapper" current="{{currentTab}}" bindchange="swiperTab">
  <swiper-item class="swiper-main">
    <scroll-view scroll-y="{{true}}" style="height:100%">
      <view class="swiper-main">
        <block wx:for="{{volunteerIcon}}" wx:key="index">
          <volunteer-swiper iconInf="{{item}}"></volunteer-swiper>
        </block>
      </view>
    </scroll-view>
  </swiper-item>
  <swiper-item >
    <scroll-view scroll-y="{{true}}" style="height:100%">
      <view class="swiper-main">
        <block wx:for="{{volunteerIcon2}}" wx:key="index">
          <volunteer-swiper iconInf="{{item}}"></volunteer-swiper>
        </block>
      </view>
    </scroll-view>
  </swiper-item>
</swiper>