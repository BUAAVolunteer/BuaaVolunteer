/* 组件基本样式 */
.wrapper {
  box-shadow: 0 0 12px 6px rgba(84, 162, 254, 0.05);
  display: inline-block;
  margin-bottom: 30rpx;
  border-radius: 30rpx;
}

.middle-nav {
  position: relative;
}

.middle-icon {
  width: 335rpx;
  height: 207rpx;
}

.middle-icon--show {
  width: 335rpx;
  height: 444rpx;
}

.box {
  top: 47rpx;
  position: absolute;
  width: 100%;
}

.box-header {
  display: flex;
  align-items: center;
}

.box-header__pics {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-left: 21rpx;
}

.box-header__text {
  font-size: 30rpx;
  color: #5a5d5d;
  margin-left: 17rpx;
  width: 170rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.box-content {
  color: #5a5d5d;
  font-size: 25rpx;
  line-height: 50rpx;
  padding: 10rpx 0 0 28rpx;
}

.box-content__inner {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

/* 悬浮窗样式 */
.header {
  display: flex;
  justify-content: center;
  height: 111rpx;
  padding: 4rpx;
}

.header-date {
  text-align: center;
  font-weight: bold;
  margin-top: 15rpx;
  line-height: 26rpx;
  font-size: 26rpx;
}

.middle {
  height: 500rpx;
  background-color: #bfe6e9;
  border-radius: 5%;
  width: 85%;
  margin: 20rpx 5%;
  margin-bottom: 15rpx;
  padding: 15rpx;
}

.items-title {
  font-weight: bold;
  font-family: Microsoft YaHei;
}

.texts {
  font-weight: normal;
  font-family: Microsoft YaHei;
  line-height: 30rpx;
}

.footer {
  justify-content: space-around;
  display: flex;
}
