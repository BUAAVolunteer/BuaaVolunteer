/* pages/Main/childCpn/bulletin-item/bulletin-item.wxss */
.wrapper {
  align-items: center;
  box-shadow: 0 2px 12px var(--greyLight);
  border-radius: 20rpx;
  display: flex;
  height: auto;
  margin: 60rpx auto 0;
  width: 650rpx;
}

.time {
  align-items: center;
  display: flex;
  flex-direction: column;
  font-family: Microsoft YaHei;
  justify-content: center;
  height: 100%;
  line-height: 30rpx;
  letter-spacing: 6rpx;
  padding-left: 4rpx;
  width: 180rpx;
}

.line1,
.line3 {
  color: #b5b5b5;
  font-size: 25rpx;
  line-height: 55rpx;
}

.line1 {
  width: 92%;
  display: flex;
  justify-content: space-between;
}

.line2 {
  color: #5a5d5d;
  font-size: 30rpx;
  line-height: 60rpx;
}

.line3 {
  letter-spacing: 10rpx;
}

.main {
  border-left: 4rpx solid #f5f5f5;
}

.content {
  color: #5a5d5d;
  font-size: 25rpx;
  font-family: Microsoft YaHei;
  height: 100%;
  margin: 60rpx 0 60rpx 27rpx;
  line-height: 40rpx;
  letter-spacing: 2px;
  min-height: 40rpx;
  max-height: 215rpx;
  overflow: auto;
  padding-right: 50rpx;
  width: 443rpx;
  -webkit-overflow-scrolling: touch;
}
