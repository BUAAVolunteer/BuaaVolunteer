<!-- 轮播图组件 -->
<main-swiper imageList="{{imageList}}"></main-swiper>
<!-- logo -->
<main-logo></main-logo>
<!--text-->
<text class="middle-text">志愿报名</text>
<!-- 遍历展示组件，子组件仅包含按钮功能，数据由item传入 -->
<list
 class="middle-list"
 refresh-loading="{{refreshLoading}}"
 bindrefresh="initList"
>
	<view class="middle-icon">
		<block wx:for="{{mainIcon}}" wx:key="index">
			<main-icon iconInf="{{item}}" currentTime="{{current}}"></main-icon>
		</block>
	</view>
</list>
