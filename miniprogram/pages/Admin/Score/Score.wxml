<!--pages/Admin/Score/Score.wxml-->
<form bindsubmit="identify" report-submit="true">
  <view class="cu-form-group margin-top">
	<view class="title">手机号</view>
	  <input placeholder="请输入11位手机号" name="phone"></input>
  </view>

  <view class="cu-form-group margin-top">
	<view class="title">项目名称</view>
	<picker name="title" bindchange="PickerChange" value="{{index}}" range="{{picker}}">
      <view class="picker">
		{{index?picker[index]:'请选择增减积分的志愿项目'}}
	  </view>
	</picker>
  </view>

  <view class="padding flex flex-direction">
    <button class="cu-btn round bg-blue lg" bindtap="search" form-type="submit">查询志愿 </button>
  </view>
</form>
<text class="margin">志愿名称：{{volun_name}}\n</text>
<text class="margin">手机号：{{volun_phone}}\n</text>
<text class="margin">志愿时长：{{volun_time}}\n</text>
<text class="margin">志愿积分：{{volun_score}}\n\n</text>

<view class="margin">奖励积分</view>
<view class="padding flex flex-wrap justify-around align-center">
  <button class="cu-btn block line-blue" bindtap="inner" form-type="submit">添加内部名额</button>
</view>

<view class="margin">奖励积分</view>
<view class="padding flex flex-wrap justify-around align-center">
  <button class="cu-btn block line-blue" bindtap="plus1" form-type="submit">提交感想</button>
  <button class="cu-btn block line-blue" bindtap="plus2" form-type="submit">优秀感想</button>
  <button class="cu-btn block line-blue" bindtap="plus3" form-type="submit">受到表扬</button>
</view>
<view class="margin">惩罚积分</view>
<view class="padding flex flex-wrap justify-around align-center">
  <button class="cu-btn block line-blue" bindtap="minus4" form-type="submit">志愿迟到</button>
  <button class="cu-btn block line-blue" bindtap="minus5" form-type="submit">受到批评</button>
  <button class="cu-btn block line-blue" bindtap="minus6" form-type="submit">其他行为</button>
  <view >与缺勤有关的失信情况，请前往缺勤者页面进行处理</view>
</view>
