/* pages/Admin/Admin.wxss */
.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #eeeeee;
  text-align: center;
  line-height: 80rpx;
  height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}

.tab-item {
  font-size: 30rpx;
  display: inline-block;
  width: 25%;
  color: #666666;
}

.active {
  color: var(--blue);
  border-bottom: 4rpx solid var(--blue);
}

.swiper {
  width: 100%;
  height: 100%;
  display: flex;
  position: fixed;
  text-align: center;
  font-weight: bold;
}

.swiper-title {
  width: 750rpx;
  height: 93%;
}
