<page-meta>
  <navigation-bar front-color="#fff" background-color="#fff" />
</page-meta>
<profile-header class="hide" person="{{person}}"></profile-header>
<!-- 中部 -->
<view class="middle">
  <profile-middle-icon
    icon="/assets/icons/profile/time.png"
    describe="志愿历史："
    content="{{person.time}} 小时"
  />
  <view class="middle--div"></view>
  <profile-middle-icon
    icon="/assets/icons/profile/score.png"
    describe="志愿积分："
    content="{{person.score}} 分"
    color="blue"
  />
  <!-- 地图 -->
  <image class="middle--map" src="/assets/image/profile/map.png" />
  <view class="footer__up">
    <profile-footer-icon type="1" content="新手教程"></profile-footer-icon>
    <profile-footer-icon type="2" content="问题反馈"></profile-footer-icon>
    <profile-footer-icon type="3" content="更新日志"></profile-footer-icon>
  </view>
  <view class="footer__down">
    <profile-footer-icon type="4" content="积分细则"></profile-footer-icon>
    <profile-footer-icon type="5" content="蓝协介绍"></profile-footer-icon>
    <profile-footer-icon type="6" content="联系我们"></profile-footer-icon>
  </view>
  <view class="gugugu">
    <image mode="widthFix" src="/assets/image/profile/gu.png" />
  </view>
</view>
