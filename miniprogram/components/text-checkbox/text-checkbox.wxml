<!-- components/text-time/text-time.wxml -->
<view class='reports-form-box form-inner'>
  <view class='input-all-width'>
    <view class='form-inputname'>
      {{forminfo.label}}
      <text wx:if="{{forminfo.force}}" class="force_text">*</text>
    </view>
  </view>
  <view wx:if="{{forminfo.text.length>0}}" class="form-describe input-all-width">
    {{forminfo.text}}
  </view>
  <checkbox-group wx:for-items="{{forminfo.data}}" wx:key="id" class="block" bindchange="checkboxChange">
    <checkbox wx:if="{{forminfo.limit&&item.limit>0 || !forminfo.limit}}" class="blue" style="display:flex;" value='{{item.name}},{{item.id}},{{item.duration}}'>
      <view class="radio-box">
        {{item.name}}
        <text wx:if="{{forminfo.limit}}" class="form-describe" style="margin-left:20rpx;">
          剩余{{item.limit}}
        </text>
        <text wx:if="{{forminfo.duration}}" class="form-describe" style="margin-left:20rpx;">
          时长{{item.duration}}
        </text>
      </view>
    </checkbox>
    <checkbox wx:else class="blue" style="display:flex;" disabled="{{true}}" value='{{item.name}},{{item.id}},{{item.duration}}'>
      <view class="radio-box">
        {{item.name}}
        <text wx:if="{{forminfo.limit}}" class="form-describe" style="margin-left:20rpx;">
          剩余{{item.limit}}
        </text>
        <text wx:if="{{forminfo.duration}}" class="form-describe" style="margin-left:20rpx;">
          时长{{item.duration}}
        </text>
      </view>
    </checkbox>
  </checkbox-group>
</view>